@model IEnumerable<BookShelf.Models.Book>

@{
    ViewBag.Title = "Index";
}
<div class="media-body">
    <h2>Index</h2>

    <p>
        <button type="button"> @Html.ActionLink("Create New", "Create")</button>
    </p>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>  @Html.DisplayFor(modelItem => item.Title)</h3>
                        <p> @Html.DisplayNameFor(model => model.PublishedDate) : @Html.DisplayFor(modelItem => item.PublishedDate)</p>
                        <button type="button">  <p> @Html.ActionLink("Details", "Details", new { id = item.BookID })</p></button>


                    </div>
                </div>
            </div>
        }
    </div>
</div>
   